Based on Adventure Work Database

Growth %
% Growth = DIVIDE([Revenue]-[PY],[PY])

Revenue
Revenue = SUM(FactInternetSales[SalesAmount])

Revenue Label
Revenue Label = FORMAT([Revenue],"â‚¬#,0,.0#K")

PY 
PY = CALCULATE([Revenue],SAMEPERIODLASTYEAR(DimDate[Date]))


Up and Down Color
Up and Down Color = 
VAR _Item = [% Growth]
VAR _Label =
SWITCH(
    True,
    _Item = 0,  "grey" ,
    _Item > 0,  "green",
    _Item < 0,  "red"
)
RETURN
_Label

Up and Down Color light 
Up and Down Color light = 
VAR _Item = [% Growth]
VAR _Label =
SWITCH(
    True,
    _Item = 0,  "grey" ,
    _Item > 0,  "#D0F0C0A6",
    _Item < 0,  "#ffcbd1A6"
)
RETURN
_Label
